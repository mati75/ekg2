
# libpcap (sniff)

Import('*')

out = env['SKIPCHECKS']
if not out:
	old	= SetFlags(env, ['-D_GNU_SOURCE'])
	out = conf.CheckLibWithHeader('pcap', ['pcap.h'], 'C', 'pcap_open_live(NULL, 0, 0, 0, NULL);', 0)
	RestoreFlags(env, old)

if out:
	libs.append('pcap')

Return('out')

