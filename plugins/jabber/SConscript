
Import('*')

if 'defines' in globals():
	for o in ['gnutls', 'openssl']:
		if o in optdeps:
			defines['JABBER_HAVE_%s' % o.upper()] = True
			break

if 'env' in globals():
	plugin	= {
		'type':			'protocol',
		'state':		'stable',
		'depends':		['expat'],
		'optdepends':	[['gnutls', 'openssl'], 'zlib']
		}

	Return('plugin')

